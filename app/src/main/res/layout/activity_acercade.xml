<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaDeActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo1">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Acerca De"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:letterSpacing="0.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información Adicional De SOLI:  "
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Button
            android:onClick="btnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Aquí"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo Desarrollador:  "
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <Button
            android:onClick="btnEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Aquí"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Correo de contacto: soli.aprende@gmail.com"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redes Sociales:"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:onClick="btnYT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Youtube"
            android:drawableLeft="@drawable/y_logo"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#ff0000"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"/>

        <Button
            android:onClick="btnFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:drawableLeft="@drawable/f_logo"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#4864a4"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <Button
        android:onClick="btnIG"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:drawableLeft="@drawable/i_logo"
        style="?attr/materialButtonOutlinedStyle"
        app:cornerRadius="15dp"
        app:strokeColor="#b4149e"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_utp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="Utp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_fisc"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="UtpFisc"/>

    </LinearLayout>

</LinearLayout>