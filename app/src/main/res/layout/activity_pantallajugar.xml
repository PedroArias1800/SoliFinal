<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PantallaJugarActivity"
    android:background="@drawable/fondo1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_soli_claro"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="#062132"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SoLi - Software Life"
                android:textSize="25dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio De La Prueba"
                android:textSize="22dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp">

        <TextView
            android:text="Tipo De Pregunta"
            android:id="@+id/lblTipoPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#062132"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/lblNivel"
            android:text="Nivel De Juego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#062132"
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:textSize="40sp"
        android:text="--s"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="-50dp"
        android:backgroundTint="#062132"
        android:background="@drawable/rounded_item"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <TextView
                android:text="Cargando..."
                android:id="@+id/lblPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="#062132"
                android:textSize="20dp"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imgCargandoJugar"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/renderRespuestas"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_item"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

</LinearLayout>