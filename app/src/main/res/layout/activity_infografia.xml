<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfografiaActivity"
    android:background="@drawable/fondo1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/logo_soli_claro"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soli - Software Life"
            android:textSize="35dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciclo De Vida Del Software"
            android:textSize="28dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="En esta sección encontrarás enlaces para aumentar tus conocimientos acerca de el ciclo de vida del software"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link 1"
                    android:onClick="link1"
                    style="?attr/materialButtonOutlinedStyle"
                    app:cornerRadius="20dp"
                    app:strokeColor="#0026f0"
                    android:textColor="#0026f0"
                    android:backgroundTint="@color/white"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link 2"
                    android:onClick="link2"
                    style="?attr/materialButtonOutlinedStyle"
                    app:cornerRadius="20dp"
                    app:strokeColor="#0026f0"
                    android:textColor="#0026f0"
                    android:backgroundTint="@color/white"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link 3"
                    android:onClick="link3"
                    style="?attr/materialButtonOutlinedStyle"
                    app:cornerRadius="20dp"
                    app:strokeColor="#0026f0"
                    android:textColor="#0026f0"
                    android:backgroundTint="@color/white"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link 4"
                    android:onClick="link4"
                    style="?attr/materialButtonOutlinedStyle"
                    app:cornerRadius="20dp"
                    app:strokeColor="#0026f0"
                    android:textColor="#0026f0"
                    android:backgroundTint="@color/white"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link 5"
                    android:onClick="link5"
                    style="?attr/materialButtonOutlinedStyle"
                    app:cornerRadius="20dp"
                    app:strokeColor="#0026f0"
                    android:textColor="#0026f0"
                    android:backgroundTint="@color/white"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link 6"
                    android:onClick="link6"
                    style="?attr/materialButtonOutlinedStyle"
                    app:cornerRadius="20dp"
                    app:strokeColor="#0026f0"
                    android:textColor="#0026f0"
                    android:backgroundTint="@color/white"/>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_utp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="Utp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_fisc"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="UtpFisc"/>

    </LinearLayout>

</LinearLayout>