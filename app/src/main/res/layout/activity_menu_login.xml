<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuLoginActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo1"
    >

    <ImageView
        android:layout_width="275dp"
        android:layout_height="130dp"
        android:padding="5dp"
        android:src="@drawable/logo_soli_claro"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cornerRadius="20dp"
        app:strokeColor="@color/white"
        android:background="@drawable/rounded_item"
        android:backgroundTint="#062132"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciclo De Vida Del Software"
            android:textSize="28dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menú Principal"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DesplegarLogOut"
            android:src="@drawable/salirwh"
            android:layout_gravity="right"
            android:layout_marginTop="-33dp"
            android:layout_marginRight="10dp"
            android:onClick="LogOut"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugar"
            android:textSize="22dp"
            android:layout_marginTop="30dp"
            android:onClick="OpcionJugar"
            android:id="@+id/btnJugar"
            android:visibility="gone"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#0026f0"
            android:textColor="#0026f0"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ranking"
            android:textSize="22dp"
            android:layout_marginTop="30dp"
            android:onClick="OpcionRanking"
            android:id="@+id/btnRanking"
            android:visibility="gone"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#0026f0"
            android:textColor="#0026f0"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acerca De"
            android:textSize="22dp"
            android:layout_marginTop="30dp"
            android:onClick="OpcionAcercaDe"
            android:id="@+id/btnAcercaDe"
            android:visibility="gone"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#0026f0"
            android:textColor="#0026f0"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Infografía"
            android:textSize="22dp"
            android:layout_marginTop="30dp"
            android:onClick="OpcionInfografia"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnInfografia"
            android:visibility="gone"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#0026f0"
            android:textColor="#0026f0"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ad. Preguntas"
            android:textSize="22dp"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:onClick="OpcionAdPreguntas"
            android:layout_marginBottom="60dp"
            android:id="@+id/btnPregunta"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#0026f0"
            android:textColor="#0026f0"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ad. Usuarios"
            android:textSize="22dp"
            android:visibility="gone"
            android:onClick="OpcionAdUsuarios"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="110dp"
            android:id="@+id/btnUsuario"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="20dp"
            app:strokeColor="#0026f0"
            android:textColor="#0026f0"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/txtSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Estás seguro que quieres cerrar sesión?"
            android:textSize="25dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Cancelar"
                android:textSize="18dp"
                android:onClick="BotonCancelar"
                android:visibility="gone"
                style="?attr/materialButtonOutlinedStyle"
                app:cornerRadius="20dp"
                app:strokeColor="#0026f0"
                android:textColor="#0026f0"
                android:backgroundTint="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"/>

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Cerrar Sesión"
                android:layout_marginLeft="25dp"
                android:textSize="18dp"
                android:onClick="CerrarSesion"
                android:visibility="gone"
                style="?attr/materialButtonOutlinedStyle"
                app:cornerRadius="20dp"
                app:strokeColor="#0026f0"
                android:textColor="#0026f0"
                android:backgroundTint="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel"
                android:id="@+id/imgCancelar"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/salirwh"
                android:id="@+id/imgSalirwh"
                android:visibility="gone"
                android:layout_marginLeft="158dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo_utp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="Utp"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/logo_fisc"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_item"
            android:backgroundTint="@color/white"
            android:onClick="UtpFisc"/>

    </LinearLayout>

</LinearLayout>